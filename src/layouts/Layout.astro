---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="p-0 m-0">
		<!-- <slot /> -->
		<header class="bg-[#161d24] h-[80px]">
			<div class="container max-w-[1200px] mx-auto my-0">
				<div class="flex-menu flex h-20 w-[60%] items-center float-left font-sans uppercase ">
					<img 
						src="https://store.akamai.steamstatic.com/public/shared/images/header/logo_steam.svg?t=962016"
						alt=""
						class="icono w-[160px]"
					/>
					<menu class="text-[#f1ecec]">
						<li class="ml-[10px] inline-block font-semibold text-[#e6d7d7] hover:text-[#1a93eb] underline decoration-2"><a href="#">Tienda</a></li>
						<li class="ml-[10px] inline-block font-semibold text-[#e6d7d7] hover:text-[#1a93eb] underline decoration-2"><a href="#">Comunidad</a></li>
						<li class="ml-[10px] inline-block font-semibold text-[#e6d7d7] hover:text-[#1a93eb] underline decoration-2"><a href="#">Acerca de</a></li>
						<li class="ml-[10px] inline-block font-semibold text-[#e6d7d7] hover:text-[#1a93eb] underline decoration-2"><a href="#">Soporte</a></li>
					</menu>
				</div> 

				<div class="menu-right float-left w-[40%] text-[#f1ecec] font-serif text-[12px]">
					<a href="#" class="btn-download text-[#f1ecec] bg-[#789806] py-[6px] px-[12px] font-sans text-[11px] mt-[10px] mr-[10px] gap-[8px] inline-flex items-center">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="size-4"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3"
							></path>
						</svg>
						Instalar Steam
					</a>
						<a href="#" class="mensaje-top no-underline text-[#d1d1d1] font-sans text-[12px]"> iniciar sesion </a>
						 | 
						<a href="#" class="mensaje-top no-underline text-[#d1d1d1] font-sans text-[12px]"> idioma </a>
				</div>
			</div>
		</header>

		<div class="banner"></div>
		<div class="left-menu"></div>
		<div class="banner2 container max-w-[1200px] mx-auto my-0"></div>
		<div class="banner3"></div>
		<div class="bg-blue-500 text-white/80 py-2 px-4 rounded-md hover:bg-blue-600 transition-colors duration-300 hover:cursor-pointer inline-flex items-center group"
		>
			<!-- duration para el tiempo de transition-colors -->

			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mr-1 mt-1 group-hover:animate-spin"
			>
				<!-- animated-spin para animaciones -->
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
				></path>
			</svg>

			Presioname!
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="size-4 mt-[2px]"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3">
				</path>
			</svg>
		</div>
		<!-- heroicons para los iconos -->
	</body>
</html>
